<%- include ('../partials/main_nav.ejs') %>

<link rel='stylesheet' href='/Content/register.css' />
<main>
  <br><br><br><br>
  <div class="container">
    <img src="/Assets/images/blog_lead.png"  width="300" height="600">
    <div>
      
      <h1><%= title%></h1>
      <h6>One-stop to all your Questions</h6>
      <form method="POST" autocomplete="off">
        <fieldset class="form-group">
          <label for="username">Username: </label>
          <input
            type="text"
            class="form-control"
            name="username"
            placeholder="Enter username"
            id="username"
            required
            autofocus
          />
        </fieldset>

        <fieldset class="form-group">
          <label for="password">Password: </label>
          <input
            type="password"
            class="form-control"
            name="password"
            placeholder="Enter password"
            id="password"
            required
          /><br>
          or
          <a href="/register">Register Here</a>
        </fieldset>

        <fieldset class="form-group text-right">
          <input type="submit" class="btn btn-success" value="Login" />
          <a href="/"><br><br>
            <input type="button" class="btn btn-warning" value="Cancel" />
          </a>
        </fieldset>
       
          or
          <h2>  Select what best describes you</h2>
            <span>
              <button id="other" class="btn"><a href="/login">Student</a></button><br><br>
              <button id="other" class="btn"><a href="/staff-login">Staff</a></button><br><br>
              <button id="other" class="btn"><a href="/recruiter-login">Recruiter</a></button><br><br>
            </span>   
          
      </form>
    </div>
  </div>
</main>

